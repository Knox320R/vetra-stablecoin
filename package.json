{
  "name": "vetra-coin",
  "version": "1.0.0",
  "description": "Vetra - 1:1 USD-backed stablecoin on Polygon PoS with Chainlink Proof-of-Reserves",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:coverage": "hardhat coverage",
    "test:gas": "cross-env REPORT_GAS=true hardhat test",
    "deploy:amoy": "hardhat run scripts/deploy.ts --network amoy",
    "deploy:polygon": "hardhat run scripts/deploy.ts --network polygon",
    "verify:amoy": "hardhat run scripts/verify.ts --network amoy",
    "verify:polygon": "hardhat run scripts/verify.ts --network polygon",
    "initial-mint:amoy": "hardhat run scripts/initial-mint.ts --network amoy",
    "initial-mint:polygon": "hardhat run scripts/initial-mint.ts --network polygon",
    "lint": "echo 'Linting not configured yet'",
    "clean": "hardhat clean"
  },
  "keywords": [
    "stablecoin",
    "polygon",
    "chainlink",
    "uups",
    "erc20"
  ],
  "author": "Vetra Foundation Ltd",
  "license": "MIT",
  "devDependencies": {
    "@chainlink/contracts": "^1.5.0",
    "@nomicfoundation/hardhat-chai-matchers": "^2.1.0",
    "@nomicfoundation/hardhat-toolbox": "^6.1.0",
    "@nomiclabs/hardhat-etherscan": "^3.1.8",
    "@openzeppelin/contracts-upgradeable": "^5.4.0",
    "@openzeppelin/hardhat-upgrades": "^3.9.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.9.1",
    "chai": "^4.5.0",
    "cross-env": "^10.1.0",
    "dotenv": "^17.2.3",
    "hardhat": "^2.26.3",
    "hardhat-gas-reporter": "^2.3.0",
    "solidity-coverage": "^0.8.16",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
